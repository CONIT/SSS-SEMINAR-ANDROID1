<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/list_item"
    android:layout_width="match_parent"
    android:layout_height="72dp" >

    <TextView
        android:id="@+id/text_title"
        style="@style/list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_author"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/text_price" />

    <TextView
        android:id="@+id/text_author"
        style="@style/list_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/text_date_registered" />

    <TextView
        android:id="@+id/text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_date_registered"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="bottom"
        android:paddingBottom="8dp"
        android:textColor="@color/list_item_price_text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_date_registered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/text_author"
        android:textColor="@color/list_item_date_text"
        android:textSize="12sp" />

</RelativeLayout>